datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Color {
    RED
    BLUE
    GREEN
    YELLOW
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    username String
    password String
    email    String @unique

    picUrl   String?
    picColor Color   @default(BLUE)
}
